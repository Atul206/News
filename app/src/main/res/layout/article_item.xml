<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/bg_color"
    android:elevation="@dimen/eleveation_10">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/image_top_padding_5"
        android:paddingTop="@dimen/image_top_padding_5"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="@dimen/title_padding_2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="@dimen/title_padding_2"
        android:text="New title"
        android:textColor="@color/title_color"
        android:textSize="@dimen/title_size_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon" />


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="10"
        android:padding="@dimen/padding_10"
        android:text="New title asdjhasjdgajsdahsdkhaskdhk asdhajkshdkjahsdkjhasdsahdjkashdjkahsdakjhdjkahsdkjhasjkhdjkahsd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/desciption_size_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />


    <TextView
        android:id="@+id/news_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="10"
        android:padding="@dimen/padding_10"
        android:text="Read more"
        android:textColor="@color/link_color"
        android:textSize="@dimen/text_8"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="10"
        android:padding="@dimen/padding_10"
        android:text="Source: Indian Tv"
        android:textColor="@color/source_color"
        android:textSize="@dimen/text_8"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_link" />


</android.support.constraint.ConstraintLayout>